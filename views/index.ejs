

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Library Management System</title>
  <link rel="stylesheet" href="/style.css">
 <style>
  body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  background-color: #333; 
  color: #fff; 
  scroll-behavior: smooth; 
  background-image: url('https://png.pngtree.com/thumb_back/fh260/background/20230526/pngtree-an-old-bookcase-in-a-library-image_2642908.jpg'); 
  background-size: cover; 
}
.book {
  border: 1px solid #888; 
  border-radius: 4px;
  padding: 10px;
  margin-bottom: 20px;
  background-color: rgba(255, 255, 255, 0.1); 
}


.book .overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.book:hover .overlay {
  opacity: 1;
}

.book h3 {
  margin-bottom: 5px;
  color: #fff;
}
.book:hover {
      transform: scale(1.05);
      transition: transform 0.3s ease;
    }

    .book:hover img {
      opacity: 0.8;
    }

    .book img {
      transition: opacity 0.3s ease;
    }


    nav {
  background-color: rgba(0, 0, 0, 0.7); 
  padding: 10px 20px;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 1000; 
  display: flex;
  justify-content: space-between; 
  align-items: center;
  border-bottom: 2px solid #ffffff; 
}

nav ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
  display: flex;
}

nav ul li {
  margin-right: 20px;
}

nav ul li a {
  color: #fff;
  text-decoration: none;
  font-size: 18px;
  position: relative;
}

nav ul li a:hover {
  color: #ffcc00; 
}

nav ul li a::before {
  content: '';
  position: absolute;
  bottom: -2px; 
  left: 0;
  width: 100%;
  height: 2px;
  background-color: #ffcc00; 
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

nav ul li a:hover::before {
  transform: scaleX(1); 
}


  section {
    padding: 50px 20px;
    background-color: rgba(0, 0, 0, 0.7); 
    margin-top: 80px; 
  }

  h2 {
    color: #fff;
    text-align: center;
    margin-bottom: 20px;
  }

  
  form {
    max-width: 400px;
    margin: 0 auto;
    background-color: rgba(255, 255, 255, 0.1);
    padding: 20px;
    border-radius: 8px;
  }

  label {
    color: #fff;
    display: block;
    margin-bottom: 10px;
    margin-top: 50px;
  }

  input[type="text"],
  select {
    width: 100%;
    padding: 8px;
    margin-bottom: 10px;
    border: none;
    border-radius: 4px;
    background-color: #e5e5e5; 
    color: #14213d;
  }

  button {
    padding: 10px 20px;
    background-color: #007bff; 
    color: #fff;
    border: none;
    border-radius: 20px; 
    cursor: pointer;
    transition: background-color 0.3s ease;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3); 
  }

  button:hover {
    background-color: #0056b3; 
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.5); 
  }


  .container {
    max-width: 800px;
    margin: 0 auto;
  }

  .book {
    border: 1px solid #888; 
    border-radius: 4px;
    padding: 10px;
    margin-bottom: 20px;
    background-color: rgba(255, 255, 255, 0.1); 
  }
  h1 {
    margin-top: 50px; 
  }
  .book h3 {
    margin-bottom: 5px;
    color: #fff;
  }

  @media (max-width: 768px) {
  .book {
    padding: 5px; 
    margin-bottom: 10px;
  }
}


@media (min-width: 769px) {
  .book {
  
    padding: 15px; 
    margin-bottom: 30px; 
  }
}

</style>
  
</head>
<body>
  <h1>Library Management System</h1>

  <nav>
    <ul>
      <li><a href="#search">Search</a></li>
      <li><a href="#post-book">Post New Book</a></li>
      <li><a href="#search-by-folder">Search Books by Folder</a></li>
    </ul>
  </nav> 
  


  <section id="search">
    <h2>Search Section</h2>
    <form action="/search" method="post">
      <label for="category">Select Category:</label>
      <select name="category" id="category">
        <option value="history">History</option>
        <option value="chemistry">Chemistry</option>
        <option value="biology">Biology</option>
      </select>
      <button type="submit">Search</button>
    </form>
  </section>


  <section id="post-book">
    <h2>Post New Book Section</h2>
    <form action="/books" method="post">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" required><br>
      <label for="author">Author:</label>
      <input type="text" id="author" name="author" required><br>
      <label for="category">Category:</label>
      <select name="category" id="category">
        <option value="history">History</option>
        <option value="chemistry">Chemistry</option>
        <option value="biology">Biology</option>
      </select><br>
      <button type="submit">Post</button>
    </form>
    <form action="/add-to-folder" method="post">
      <label for="bookId">Select Book:</label>
      <select name="bookId" id="bookId">
        <% books.forEach(book => { %>
          <option value="<%= book._id %>"><%= book.title %> by <%= book.author %></option>
        <% }); %>
      </select>
      <label for="folderName">Folder Name:</label>
      <input type="text" id="folderName" name="folderName" required>
      <button type="submit">Add to Folder</button>
    </form>
  </section>

  
  <section id="search-by-folder">
    <h2>Search Books by Folder Section</h2>
    <form action="/searchByFolder" method="post">
      <label for="folder">Folder Name:</label>
      <input type="text" id="folder" name="folder" required><br>
      <button type="submit">Search</button>
    </form>
  </section>

  <div class="container">
    <% const categoryBooks = {}; %>
    <% books.forEach(book => { %>
      <% if (!categoryBooks[book.category]) { %>
        <% categoryBooks[book.category] = []; %>
      <% } %>
      <% categoryBooks[book.category].push(book); %>
    <% }); %>
    
    <% for (const category in categoryBooks) { %>
      <div class="category">
        <h2> <%= category %></h2>
        <div class="shelf">
          <% categoryBooks[category].forEach(book => { %>
            <div class="book">
              <h3><%= book.title %> by <%= book.author %></h3>
              <p>Category: <%= book.category %></p>
              <button onclick="shareBook('<%= book.title %>', '<%= book.author %>', '<%= book.category %>', '<%= book.folder %>')">Share</button>
              <button onclick="deleteBook('<%= book._id %>')">Delete</button> 
            </div>
          <% }); %>
        </div>
      </div>
    <% } %>
  </div>

  <script>
    function shareBook(title, author, category) {
      const textToCopy = `Title: ${title}\nAuthor: ${author}\nCategory: ${category}`;
      navigator.clipboard.writeText(textToCopy)
        .then(() => alert('Book details copied to clipboard'))
        .catch(err => console.error('Could not copy text: ', err));
    }
    function scrollToSection(sectionId) {
  const section = document.getElementById(sectionId);
  if (section) {
    section.scrollIntoView({
      behavior: 'smooth'
    });
  }
}


document.querySelectorAll('nav a').forEach(link => {
  link.addEventListener('click', function(event) {
    event.preventDefault();
    const sectionId = this.getAttribute('href').substring(1);
    scrollToSection(sectionId);
  });
});
    function deleteBook(id) {
      fetch(`/books/${id}`, {
        method: 'DELETE'
      })
      .then(response => {
        if (response.ok) {
          console.log('Book deleted successfully');
          location.reload(); 
        } else {
          console.error('Failed to delete book');
        }
      })
      .catch(error => console.error('Error:', error));
    }
  </script>
</body>
</html> 

 











